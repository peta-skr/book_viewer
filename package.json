{
  "name": "book_viewer",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "tsc -w -p electron",
    "dev:start": "cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 wait-on http://localhost:5173 && wait-on ./dist-electron/electron/main.js && electron .",
    "dev": "concurrently -k \"npm:dev:electron\" \"npm:dev:renderer\" \"npm:dev:start\"",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron",
    "build": "npm run build:renderer && npm run build:electron",
    "dist": "npm run build && electron-builder",
    "test": "vitest",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "electron-rebuild": "^3.2.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.5",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.2.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.13",
    "wait-on": "^9.0.1"
  }
}
